    <!-- Base application theme. -->

    <!-- Button -->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_default_btn</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/default_button_text_sel</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="TextAppearanceTabs" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <!--<style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
