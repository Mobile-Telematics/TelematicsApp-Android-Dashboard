<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingStart="12dp"
    android:paddingTop="8dp"
    android:paddingEnd="12dp"
    android:paddingBottom="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/rank_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/coinsImg"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_rewards_drivecoins"
            app:tint="@color/colorDefButton" />

        <TextView
            android:id="@+id/coinsValue"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"
            android:text="0"
            android:textColor="@color/colorDasBoardCoinsTextColor"
            android:textSize="16sp" />

    </LinearLayout>


    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/rankValue"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|end"
        android:background="@drawable/rank_background"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:paddingStart="12dp"
        android:paddingEnd="16dp"
        android:text="Rank 0"
        android:textColor="@color/colorDasBoardCoinsTextColor"
        android:textSize="16sp"
        android:visibility="visible" />


</LinearLayout>